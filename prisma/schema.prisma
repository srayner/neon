generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ContainerStatus {
  running
  exited
  paused
  restarting
}

enum ServerStatus {
  online
  offline
  maintenance
}

enum ServiceStatus {
  healthy
  degraded
  down
}

enum ServiceType {
  application
  database
  website
  agent
  infrastructure
}

enum DependencyType {
  requires
  uses
  optional
}

enum ActivityType {
  warning
  critical
  success
  info
}

enum EntityType {
  server
  container
  service
}

enum EventType {
  restart
  manual_restart
  stopped
  crashed
  status_change
  version_change
  health_change
  created
  removed
  online
  offline
}

model Server {
  id                    Int             @id @default(autoincrement())
  name                  String          @unique
  hostname              String?
  ipAddress             String?         @map("ip_address")
  status                ServerStatus    @default(online)

  // Specs (relatively static)
  cpuCores              Int?            @map("cpu_cores")
  totalMemoryGb         Decimal?        @map("total_memory_gb") @db.Decimal(10, 2)
  totalDiskGb           Decimal?        @map("total_disk_gb") @db.Decimal(10, 2)

  // Operating system info
  osName                String?         @map("os_name")
  osVersion             String?         @map("os_version")
  osKernel              String?         @map("os_kernel")
  osArch                String?         @map("os_arch")

  // Docker info
  dockerVersion         String?         @map("docker_version")
  
  // Current/Latest metrics (updated frequently)
  currentCpuPercent     Decimal?        @map("current_cpu_percent") @db.Decimal(5, 2)
  currentMemoryPercent  Decimal?        @map("current_memory_percent") @db.Decimal(5, 2)
  currentDiskPercent    Decimal?        @map("current_disk_percent") @db.Decimal(5, 2)
  lastMetricsAt         DateTime?       @map("last_metrics_at")

  // Metadata
  createdAt             DateTime        @default(now()) @map("created_at")
  updatedAt             DateTime        @updatedAt @map("updated_at")

  // Relations
  containers            Container[]
  metrics               ServerMetric[]
  services              Service[]
  activities            Activity[]

  @@map("server")
}

model ServerMetric {
  id                Int       @id @default(autoincrement())
  serverId          Int       @map("server_id")
  timestamp         DateTime  @default(now())

  // Percentage metrics
  cpuPercent        Decimal   @map("cpu_percent") @db.Decimal(5, 2)
  memoryPercent     Decimal   @map("memory_percent") @db.Decimal(5, 2)
  diskPercent       Decimal   @map("disk_percent") @db.Decimal(5, 2)

  // Absolute values
  memoryUsedGb      Decimal   @map("memory_used_gb") @db.Decimal(10, 2)
  memoryTotalGb     Decimal   @map("memory_total_gb") @db.Decimal(10, 2)
  diskUsedGb        Decimal   @map("disk_used_gb") @db.Decimal(10, 2)
  diskTotalGb       Decimal   @map("disk_total_gb") @db.Decimal(10, 2)

  // Optional: network
  networkRxBytes    BigInt?   @map("network_rx_bytes")
  networkTxBytes    BigInt?   @map("network_tx_bytes")

  createdAt         DateTime  @default(now()) @map("created_at")

  // Relations
  server            Server    @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@index([serverId, timestamp(sort: Desc)])
  @@map("server_metric")
}

model Container {
  id           Int             @id @default(autoincrement())
  containerId  String          @map("container_id")
  serverId     Int             @map("server_id")
  serviceId    Int?            @map("service_id")
  name         String
  image        String
  imageId      String?         @map("image_id")
  imageTags    String[]        @default([]) @map("image_tags")
  status       ContainerStatus
  health       String?
  exitCode     Int?            @map("exit_code")
  ports        String
  labels       Json            @default("{}")
  networks     String[]        @default([])
  startedAt    DateTime?       @map("started_at")
  createdAt    DateTime        @default(now()) @map("created_at")
  updatedAt    DateTime        @updatedAt @map("updated_at")

  // Relations
  server       Server          @relation(fields: [serverId], references: [id], onDelete: Cascade)
  service      Service?        @relation(fields: [serviceId], references: [id], onDelete: SetNull)
  activities   Activity[]

  @@unique([serverId, containerId])
  @@map("container")
}

model Service {
  id              Int           @id @default(autoincrement())
  serverId        Int           @map("server_id")
  name            String
  description     String?
  serviceType     ServiceType?  @map("service_type")
  composeProject  String?       @map("compose_project")
  composeService  String?       @map("compose_service")
  version         String?
  status          ServiceStatus @default(healthy)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  // Relations
  server          Server        @relation(fields: [serverId], references: [id], onDelete: Cascade)
  containers      Container[]
  dependsOn       ServiceDependency[] @relation("DependentService")
  dependedOnBy    ServiceDependency[] @relation("DependencyService")
  activities      Activity[]

  @@unique([serverId, composeProject, composeService])
  @@map("service")
}

model ServiceDependency {
  id              Int            @id @default(autoincrement())
  serviceId       Int            @map("service_id")
  dependsOnId     Int            @map("depends_on_id")
  dependencyType  DependencyType @default(requires) @map("dependency_type")
  inferred        Boolean        @default(false)
  createdAt       DateTime       @default(now()) @map("created_at")

  // Relations
  service         Service        @relation("DependentService", fields: [serviceId], references: [id], onDelete: Cascade)
  dependsOn       Service        @relation("DependencyService", fields: [dependsOnId], references: [id], onDelete: Cascade)

  @@unique([serviceId, dependsOnId])
  @@map("service_dependency")
}

model Activity {
  id          Int          @id @default(autoincrement())
  type        ActivityType
  entityType  EntityType   @map("entity_type")
  eventType   EventType    @map("event_type")
  message     String
  serverId    Int          @map("server_id")
  containerId Int?         @map("container_id")
  serviceId   Int?         @map("service_id")
  metadata    Json         @default("{}")
  createdAt   DateTime     @default(now()) @map("created_at")

  // Relations
  server      Server       @relation(fields: [serverId], references: [id], onDelete: Cascade)
  container   Container?   @relation(fields: [containerId], references: [id], onDelete: SetNull)
  service     Service?     @relation(fields: [serviceId], references: [id], onDelete: SetNull)

  @@index([serverId, createdAt(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@map("activity")
}
